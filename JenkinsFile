node {

    stage("Git Clone"){

        git credentialsId: 'GIT_HUB_CREDENTIALS', url: 'https://github.com/aoliviero7/k8s-jenkins-aws',  branch: 'test2'
    }

     stage('Gradle Build') {
        sh './gradlew --stop'
        sh './gradlew build'
    }

    stage("Docker build"){
        sh 'docker version'
        sh 'docker build -t test2-docker-demo .'
        //sh 'docker run -p 80:80 test2-docker-demo'
        sh 'docker image list'
        sh 'docker tag test2-docker-demo alessandroliviero/test2-docker-demo:test2-docker-demo'
        sh 'docker login -u alessandroliviero -p %VuzKw5CKdBuk?s'
    }



    stage("Push Image to Docker Hub"){
        sh 'docker push  alessandroliviero/test2-docker-demo:test2-docker-demo'
    }
    
    stage("kubernetes deployment"){
        sh 'sudo kubectl rollout restart deployment bucket'
        //sh 'sudo kubectl apply -f test2.yml'
    }
} 
